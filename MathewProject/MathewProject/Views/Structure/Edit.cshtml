                @Html.DropDownList("PriestID", String.Empty)
                @Html.ValidationMessageFor(model => model.PriestID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StructureName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StructureName)
                @Html.ValidationMessageFor(model => model.StructureName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.st, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.st)
                @Html.ValidationMessageFor(model => model.st)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

