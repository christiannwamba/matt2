@model MathewProject.Models.Structure

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Structure</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StructureID)

        <div class="form-group">
            @Html.LabelFor(model => model.StructureType, new { @class = "control-label col-md-2" })
